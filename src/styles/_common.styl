
@import _variables
@import _mixins


// ------------------------------------------------------------

body
  margin 0
  font $font-size/1.44em $font-family


img
  image-rendering crisp-edges


a
  &
  &:visited
    color #555
    transition color 0.5s

  &:hover
    color #999


// ------------------------------------------------------------

img
  &[src$="help.png"]
    cursor pointer
    vertical-align middle
    margin-left 0.2rem

  &[src$='world_go.png']
    width 16px
    height 16px
    vertical-align middle


// ------------------------------------------------------------

#header
  height 100%
  width 15rem
  position fixed
  top 0
  padding 0.95rem
  border-right 1px dashed #AAA
  box-shadow 0 0 3rem -1.2rem black

  @media (max-width: 737px)
    width auto
    height auto
    position inherit
    border-right none
    border-bottom 1px dashed #AAA

    section
      &:not(:last-child)
        margin-bottom 0.4rem

    input[type="checkbox"]
      vertical-align middle

  h1
    margin-top 0

// ------------------------------------------------------------

