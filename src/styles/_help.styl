
@import _variables


// ------------------------------------------------------------

#help-popup
  top 3rem
  right 3rem
  max-width 50vw
  position fixed
  display none
  background-color white
  box-shadow 3px 3px 30px rgba(0, 0, 0, 0.5)
  padding 0.5rem
  z-index 99

  &.big
    max-width 100%
    left 3rem

    .CodeMirror
      min-height 2rem
      height 70vh

  .title
    font-weight bold
    background-color rgba(0, 0, 0, 0.05)
    margin -0.5rem -0.5rem 0.5rem
    padding 0.5rem

  .contents
    max-height calc(100vh - 8rem)
    overflow-y auto

  .close-icon
    position absolute
    top 4px
    right 4px
    width 8px
    height 8px
    border 8px solid transparent
    cursor pointer
    background linear-gradient(-45deg, transparent 5px, black 5px, black 6px, transparent 6.5px) no-repeat,
               linear-gradient(45deg, transparent 5px, black 5px, black 6px, transparent 6.5px) no-repeat

  button[name^="import"]
    line-height 1.5rem
    padding 0 0.5rem
    margin 0.5rem 0 0 0.5rem
    pointer-events none
    opacity 0.5
    float right

  &.ready
    button[name^="import"]
      pointer-events all
      opacity 1.0
