

// ------------------------------------------------------------

#lint
  display none

  & > div
    overflow-y auto

  table
    font-size 100%
    border-spacing 0
    margin-bottom 1rem
    line-height 1.0

    &:last-child
      margin-bottom 0

  caption
    text-align left
    font-weight bold

  tbody
    font-size 85%
    cursor pointer

  tr:hover
      background-color rgba(0, 0, 0, 0.1)

  td[role="severity"]
    font-size 0
    width 16px
    padding-right 0.25rem

  td[role="col"]
    text-align left
    padding-right 0.25rem

  td[role="message"]
    text-align left

  td[role="line"]
  td[role="sep"]
    text-align right
    padding-right 0


