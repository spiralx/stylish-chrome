
@import _common


// ------------------------------------------------------------



fieldset
  border-width 1px
  border-radius 6px
  margin 1em 0

.hidden
  display none

.disabled
  opacity 0.5
  h2
    &::after
      content " (Disabled)"
  .disable
    display none

.enabled
  .enable
    display none

.enabled-only > .disabled,
.edited-only > [style-update-url]
  display none


#installed
  position relative
  margin-left 280px

  &::after
    content ""
    position absolute
    top 0
    width 100%
    height 2px
    background-color #fff


#search
  width calc(100% - 4px)
  margin 0.25rem 4px 0
  border-radius 0.25rem
  padding-left 0.25rem
  border-width 1px


[style-id]
  margin 10px
  padding 0 15px
  border-top 2px solid gray


.applies-to
  word-break break-word

.applies-to,
.actions
  padding-left 15px

.applies-to-extra
  font-weight bold

.update,
.check-update
  display none

*[style-update-url] .check-update,
.can-update .update
  display inline


@media (max-width: 675px)

  #installed
    margin-left 0
  [style-id]
    margin 0

